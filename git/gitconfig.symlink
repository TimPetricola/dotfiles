[user]
	name = Tim Petricola
	email = tim.petricola@gmail.com

[github]
  user = TimPetricola

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[pull]
	rebase = true

[core]
  excludesfile = ~/.gitignore
  editor = cursor --wait

[init]
	defaultBranch = main

[includeIf "hasconfig:remote.*.url:git@github.com\:/alan-eu**"]
  path = ~/.gitconfig-alan
